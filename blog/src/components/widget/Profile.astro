---
import { Icon } from "astro-icon/components";
import { profileConfig } from "../../config";
import ImageWrapper from "../misc/ImageWrapper.astro";

const config = profileConfig;
---
<div class="card-base px-5 py-5 overflow-hidden relative">
    <div class="absolute pointer-events-none -right-14 -top-16 h-44 w-44 rounded-full
        bg-[radial-gradient(circle,rgba(52,109,219,0.15)_0%,rgba(52,109,219,0)_72%)]"></div>
    <div class="flex items-center gap-3 mb-3 relative">
        <ImageWrapper src={config.avatar || ""} alt="Profile Image of the Author"
                      class="w-16 h-16 rounded-full overflow-hidden border border-black/10 dark:border-white/15 bg-white"></ImageWrapper>
        <div class="min-w-0">
            <div class="font-bold text-xl text-black/90 dark:text-neutral-50 transition leading-tight">{config.name}</div>
            {config.role && <div class="text-sm text-black/55 dark:text-white/55 transition mt-1">{config.role}</div>}
        </div>
    </div>

    {config.bio && <p class="text-sm leading-6 text-black/70 dark:text-white/65 mb-3.5 transition">{config.bio}</p>}

    {config.stacks && config.stacks.length > 0 && (
        <div class="flex flex-wrap gap-2 mb-3.5">
            {config.stacks.map((stack) => (
                <span class="inline-flex rounded-full border border-[#bfd8ff] bg-[#ddf4ff] px-2.5 py-1
                    text-[0.72rem] font-semibold tracking-[0.01em] text-[#0550ae] dark:border-white/15 dark:bg-white/10 dark:text-white/80">
                    {stack}
                </span>
            ))}
        </div>
    )}

    <div class="flex flex-wrap gap-2">
        {config.links.map((item) => (
            <a rel="me noopener noreferrer" aria-label={item.name} href={item.url} target="_blank"
               class="btn-regular rounded-lg h-9 px-3 inline-flex items-center gap-1.5 active:scale-95">
                <Icon name={item.icon} class="text-[1rem]"></Icon>
                <span class="text-xs font-semibold">{item.name}</span>
            </a>
        ))}
    </div>
</div>
