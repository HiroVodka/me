---
import BaseHead from '../components/BaseHead.astro';
import SocialIcon from '../components/SocialIcon.astro';
import { LINKS, PROFILE } from '../site.config';

const title = `${PROFILE.name} Links`;
const description = 'SNSリンク一覧ページです。';
---
<!doctype html>
<html lang="ja">
  <head>
    <BaseHead title={title} description={description} />
  </head>
  <body>
    <main class="grid">
      <header class="hero">
        <p class="eyebrow">Social</p>
        <h1>Links</h1>
        <p class="muted">{PROFILE.name} の各種プロフィールと投稿先です。</p>
      </header>

      <section class="card">
        <h2>All Links</h2>
        <ul class="clean">
          <li><a class="link-item" href={LINKS.github}><SocialIcon type="github" />GitHub</a></li>
          <li><a class="link-item" href={LINKS.x}><SocialIcon type="x" />X</a></li>
          <li><a class="link-item" href={LINKS.zenn}><SocialIcon type="zenn" />Zenn</a></li>
          <li><a class="link-item" href={LINKS.linkedin}><SocialIcon type="linkedin" />LinkedIn</a></li>
          <li><a class="link-item" href={LINKS.blog}><SocialIcon type="blog" />Blog</a></li>
        </ul>
      </section>
    </main>
  </body>
</html>
